<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Root container-->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ic_drag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_drag" />

        <TextView
            android:id="@+id/sub_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ic_drag"
            android:gravity="center_horizontal"
            android:text="@string/sub_instruction3"
            android:textSize="18dp"
            android:visibility="visible"></TextView>



        <LinearLayout
            android:id="@+id/overlay_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_instruction"
            android:layout_centerHorizontal="true"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_back"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/return_app" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>