<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FTUActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_above="@+id/ftu_navi_layout"
        android:id="@+id/view_pager_setup_wizard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ftu_navi_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ftu_skip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/bo_qua"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/sw_control_indicator1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/ftu_control_indicator_bg" />

            <View
                android:id="@+id/sw_control_indicator2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ftu_control_indicator_bg" />

            <View
                android:id="@+id/sw_control_indicator3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ftu_control_indicator_bg" />

            <View
                android:id="@+id/sw_control_indicator4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ftu_control_indicator_bg" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_ftu_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/tiep"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:focusable="true" />

    </RelativeLayout>

</RelativeLayout>